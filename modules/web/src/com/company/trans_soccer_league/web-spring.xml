<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:gui="http://schemas.haulmont.com/cuba/spring/cuba-gui.xsd">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.company.trans_soccer_league"/>
    
    <gui:screens base-packages="com.company.trans_soccer_league.web"/>
    <bean id="transsoccerleague_proxyCreator" class="com.haulmont.cuba.web.sys.remoting.WebRemoteProxyBeanCreator">
        <property name="serverSelector" ref="cuba_ServerSelector"/>
        <property name="remoteServices">
            <map>
                <entry key="transsoccerleague_LeagueTableService"
                       value="com.company.trans_soccer_league.service.LeagueTableService"/>
                <entry key="transsoccerleague_FixtureService"
                       value="com.company.trans_soccer_league.service.FixtureService"/>
            </map>
        </property>
    </bean>

</beans>